## For sourcing RC files
alias szrc=". ~/.zshrc"
alias sbrc=". ~/.bashrc"

## For config files
alias ac=$EDITOR\ ~/.config/awesome/rc.lua
alias xmxr="xrdb -merge ~/.Xresources"
alias zshrc=$EDITOR\ ~/.zshrc

## For Mistakes
alias c="clear"
alias celar="clear"
alias clea="clear"
alias clar="clear"
alias claer="clear"
alias ckear="clear"

## For IRC
alias irc="weechat"
#alias irc="weechat-curses"
#alias weechat="weechat-curses"

## For Tmux
alias tls="tmux list-sessions"
alias ta="tmux attach -t"
alias tn="tmux new -s"

## For Package management
if type paktahn &> /dev/null; then
  # Paktahn version
  alias install="paktahn -S"
  alias update="paktahn -Syu --aur"
  alias remove="pak -R"
elif type yaourt &> /dev/null; then
  # Yaourt version
  alias install="yaourt -S"
  alias update="yaourt -Sau"
  alias remove="yaourt -R"
elif type pacman &> /dev/null; then
  # Pacman version
  alias install="sudo pacman -S"
  alias update="pacman -Syu"
  alias remove="pacman -R"
elif type brew &> /dev/null; then
  # Homebrew version
  alias install="brew install"
  alias update="brew upgrade"
  alias remove="brew uninstall"
elif type apt-get &> /dev/null; then
  # Apt version
  alias install="sudo apt-get install"
  alias update="sudo apt-get update; sudo apt-get upgrade"
  alias remove="sudo apt-get remove"
fi

## For better ls
if uname -a | grep "Linux" > /dev/null; then
  alias ls="ls -Alh --color=auto"
else
  alias ls="ls -GAlh"
fi

## Alias git to hub
if type hub &> /dev/null; then
  alias git="hub"
fi
