## Obligatory meta
alias fa="vim ~/.fish_aliases"

## For more configuration
alias ac="vim ~/.config/awesome/rc.lua"
alias xmxr="xrdb -merge ~/.Xresources"

## For Mistakes
alias c="clear"
alias celar="clear"
alias clea="clear"
alias clar="clear"
alias claer="clear"
alias ckear="clear"
alias rkae="rake"

## For IRC
if hash weechat-curses 2> /dev/null
  alias irc="weechat-curses"
  alias weechat="weechat-curses"
else if hash weechat 2> /dev/null
  alias irc="weechat"
end

## For Tmux
if hash tmux 2> /dev/null
  alias tls="tmux list-sessions"
  alias ta="tmux attach -t"
  alias tn="tmux new -s"
end

## For Package management
if hash paktahn 2> /dev/null
  # Paktahn version
  alias install="paktahn -S"
  alias update="paktahn -Syu --aur"
  alias remove="pak -R"
else if hash yaourt 2> /dev/null
  # Yaourt version
  alias install="yaourt -S"
  alias update="yaourt -Sau"
  alias remove="yaourt -R"
else if hash pacman 2> /dev/null
  # Pacman version
  alias install="sudo pacman -S"
  alias update="pacman -Syu"
  alias remove="pacman -R"
else if hash brew 2> /dev/null
  # Homebrew version
  alias install="brew install"
  alias update="brew upgrade"
  alias remove="brew uninstall"
else if hash apt 2> /dev/null
  # Apt version
  alias install="sudo apt-get install"
  alias update="sudo apt-get update; sudo apt-get upgrade"
  alias remove="sudo apt-get remove"
end

## Miscellaneous
alias ls="ls -GAl"
alias be="bundle exec"

## Steam Locomotive is better with flying disaster
if hash sl 2> /dev/null
  alias sl="sl -Fa"
end

## Experimental
alias vim=nvim
