  alias pullbr="git checkout --track"
  alias deploy="git push; and git push heroku master"
  alias push-u="git push -u origin "
  alias fetch="git fetch"
  alias fupst="git fetch upstream"
  alias mupm="git merge upstream/master"
  alias merge="git merge"
  alias status="git status"
  alias stat="git status"
  alias mkbr="git checkout -B"
  alias rmbr="git branch -d"
  alias lsbr="git branch -l"
  alias lsrm="git remote -v"
  alias branch="git branch"
  alias add="git add"
  alias adda="git add -A"
  alias diff="git diff"
  alias com="git commit -m"
  alias gpum="git pull upstream master"
  alias gpud="git pull upstream development"
  alias pubr="git pull git@github.com:j3rn/quote-builder"
end

